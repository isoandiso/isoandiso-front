{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Paths */
    "baseUrl": ".",
    "paths": {
      //"@pageCompanyEmployee/*": ["src/pages/pageCompanyEmployee/src/*"]
    }
  },
  "include": [
    "app/**/*",   // Asegura que todos los archivos dentro de app sean incluidos
    "vite-env.d.ts", // Incluir el archivo vite-env.d.ts en la ra√≠z
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}